@model IEnumerable<ipt2project.Models.Order>

@{
    ViewBag.Title = "ViewAll";
    Layout = null; 
}

<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDetails)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        <a onclick="Details('@Url.Action("Details", "Details", new { id = item.Id })')">Details</a>|
        <a onclick="Delete('@Url.Action("Delete", "Order", new { id = item.Id })')">Delete</a>|
        <a onclick="Delivered('@Url.Action("Delivered", "Delivered", new { id=item.Id })')">Delivered</a>
    </td>
</tr>
}
</table>
